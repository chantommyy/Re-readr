

<div class="dashboard-container">
  <div class="top-card">
   <div class="title">My dashboard</div>
  </div>
  <br>
  <h4 class="Swaps_title">My swaps </h4>
  <hr>
  <ul>
    <% current_user.requests_as_owner.each do |request| %>
      <li>
        <%= image_tag request.book.photo %>
        <div>
          <p> Book:<i><%= request.book.name[0,30] %></i></p>
          <p>requested by: <%= request.user.first_name %></p>
          <% if request.swaps.empty? %>
            <%= link_to "Check the bookshelf", request_user_path(request, request.user), class: 'button' %>
          <% else %>
            <p>You've selected: <i><%= request.swaps[0].book.name[0,30] %> </i>from <%= request.user.first_name %></p>
          <% end %>
          <%# <%= link_to "X", mydashboard_path, class: 'button' %>
        </div>
      </li>
    <% end %>
  </ul>
  <h4 class="Pending_title">Pending requests </h4>
    <ul>
      <% current_user.requests.each do |request| %>
      <li>
        Book: <i><%= request.book.name.first(30) %></i> Requested to <%= request.book.user.first_name %>
      </li>
      <% end %>
    </ul>
</div>
