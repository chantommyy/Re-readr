<h1>Books</h1>
<ul>
  <% @books.each do |book| %>
    <li>
      <%= link_to "#{book.name}", book_path(book)%>
      <img src="<%= book.photo %>" alt="book cover">
      <%= book.author %>
      <%= book.genre %>
      <%= book.barcode %>
      <%= book.description %>
    </li>
  <% end %>
</ul>

