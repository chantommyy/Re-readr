<div class="container">
  <h1><%= @book.name[0,30] %></h1>
  <%= link_to "Back to Books", books_path %>

  <div class="book-info">
    <img src="<%= @book.photo %>" alt="book cover">
    <p>Author: <%= @book.author %></p>
    <p>Genre: <%= @book.genre %></p>
    <p>Description: <%= @book.description %></p>
    <p><%= cl_image_tag @book.user.avatar.key,class:"card-book-user avatar-bordered"  %> <%= @book.user.first_name %> <%= @book.user.last_name[0] %>.</p>
  </div>
  <br>
  <% if @book.user != current_user %>
    <div class="btn-request">
      <%= simple_form_for [@book, @request] do |f| %>
      <%= f.submit "Swap", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% else %>
  <h1>You own this book.</h1>
  <% end %>
<% if @request %>
  <%# <%= link_to "See there profile", request_user_path(request_id: 10, user: 3) %>
  <%= link_to "See there profile", request_user_path(:request_id, :user) %>

<% end %>
  <div class="reviews">
    <p>Reviews</p>
    <% unless @reviews.nil? %>
      <% @reviews.each do |review| %>
        <p><%= review %></p>
      <% end %>
    <% end %>
  </div>
  <br>
</div>
